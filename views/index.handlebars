

<h1>Eat-Da-Burger!</h1>

<h2>Burgers not devoured</h2>
<ul>
  {{#each burgers}}
  {{#unless this.devoured}}
   <li>
     {{this.name}}
     <form action="burgers/update/{{this.id}}?_method=Put"
method="POST">
      <input type="hidden" name="devoured" value="false">
      <button type="submit">Devour</button>   
     </form>
     </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
    <li>
      {{this.name}}
      <form action="burgers/update/{{this.id}}?_method=PUT"
method="POST"> 
       <input type="hidden" name="devoured" value="false">
       <button type="submit">Not Devoured</button>
       </form>    
       </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">
<div class="form-group">
  <label for="bn">New Burger Name:</label>
    <input type="text" id="bn" name="name">
</div>
  <button type="submit">Submit</button>
</form>